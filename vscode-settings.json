{
  "breadcrumbs.enabled": false,
  "catppuccin.italicKeywords": false,
  "editor.accessibilitySupport": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "BerkeleyMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorLimit": 25000,
  "editor.occurrencesHighlight": "off",
  "editor.renderControlCharacters": true,
  "editor.renderFinalNewline": "off",
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [ "entity.other.attribute-name" ],
        "settings": { "fontStyle": "italic" }
      },
      {
        "scope": [ "entity.name.type.class" ],
        "settings": { "fontStyle": "underline" }
      }
    ]
  },
  "emmet.includeLanguages": { "erb": "html" },
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.enableTrash": false,
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": { "*": true },
  "inlineFold.maskChar": "...",
  "inlineFold.maskColor": "#7f7f7f",
  "inlineFold.regex": "(class|className)(?:=|: )(({(`|))|(['\"`]))(.*?)(\\2|(\\4)})",
  "inlineFold.unfoldedOpacity": 1,
  "inlineFold.unfoldOnLineSelect": true,
  "rubyLsp.enableExperimentalFeatures": true,
  "search.showLineNumbers": true,
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "terminal.explorerKind": "external",
  "workbench.activityBar.location": "hidden",
  "workbench.colorCustomizations": {
    "editorGhostText.foreground": "#FFA500",
    "editorGhostText.border": "#FFA500",
  },
  "window.commandCenter": false,
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.enableExperiments": true,
  "workbench.iconTheme": "catppuccin-frappe",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "[css]": { "editor.defaultFormatter": "vscode.css-language-features" },
  "[html]": { "editor.defaultFormatter": "vscode.html-language-features" },
  "[javascript]": { "editor.defaultFormatter": "vscode.typescript-language-features" },
  "[json]": { "editor.defaultFormatter": "vscode.json-language-features" },
  "[jsonc]": { "editor.defaultFormatter": "vscode.json-language-features" },
  "[ruby]": { "editor.defaultFormatter": "Shopify.ruby-lsp" }
}
