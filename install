#!/usr/bin/env zsh

set -e

DOTFILES_DIR="$HOME/.dotfiles"
CONFIG_DIR="$HOME/.config"
LOCAL_BIN_DIR="$HOME/.local/bin"
mkdir -p "$CONFIG_DIR" "$LOCAL_BIN_DIR"

echo "üì± Installing Xcode command line tools..."
xcode-select --install

echo "üñ•Ô∏è  Setting up system hostname..."
read -r "HOSTNAME?Enter hostname: " || HOSTNAME="sofuto"
if [[ -z "$HOSTNAME" ]]; then
  HOSTNAME="sofuto"
fi

echo "üîê Please enter your password:"
sudo -v

echo "üîß Setting up macOS system preferences..."
sudo scutil --set ComputerName $HOSTNAME
sudo scutil --set HostName $HOSTNAME
sudo scutil --set LocalHostName $HOSTNAME
sudo defaults write /Library/Preferences/SystemConfiguration/com.apple.smb.server NetBIOSName -string $HOSTNAME

echo "‚å®Ô∏è  Configuring keyboard settings..."
defaults write -g InitialKeyRepeat -int 10
defaults write -g KeyRepeat -int 1

echo "üì¶ Cloning dotfiles repository..."
git clone https://github.com/kennethgeerts/dotfiles.git "$DOTFILES_DIR"

cd "$DOTFILES_DIR"
echo "üç∫ Installing Homebrew..."
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
eval "$(/opt/homebrew/bin/brew shellenv)"

echo "‚è≥ Installing packages (this may take a while)..."
brew bundle --verbose

echo "üêö Setting up Prezto..."
git clone --recursive https://github.com/sorin-ionescu/prezto.git "${ZDOTDIR:-$HOME}/.zprezto"
setopt EXTENDED_GLOB
for rcfile in "${ZDOTDIR:-$HOME}"/.zprezto/runcoms/^README.md(.N); do
  ln -s "$rcfile" "${ZDOTDIR:-$HOME}/.${rcfile:t}"
done

echo "üîó Creating configuration file symlinks..."
for file in prompt.omp.json gemrc gitconfig gitignore railsrc zpreztorc zshrc; do
  rm -f "$HOME/.$file"
  ln -s "$DOTFILES_DIR/home/$file" "$HOME/.$file"
done

echo "üìÅ Creating configuration directory symlinks..."
for dir in kitty ghostty bat; do
  ln -s "$DOTFILES_DIR/config/$dir" "$CONFIG_DIR/$dir"
done

echo "üõ†Ô∏è  Linking custom scripts..."
for bin in solar.sh mac-update vimv; do
  ln -s "$DOTFILES_DIR/bin/$bin" "$LOCAL_BIN_DIR/$bin"
done

echo "üìù Setting up nvim..."
git clone https://github.com/LazyVim/starter "$CONFIG_DIR/nvim"
rm -rf "$CONFIG_DIR/nvim/.git"
rm -rf "$CONFIG_DIR/nvim/lua/plugins"
ln -s "$DOTFILES_DIR/config/nvim/lua/plugins" "$CONFIG_DIR/nvim/lua/plugins"
nvim --headless "+Lazy! sync" +qa

echo "üíé Installing Ruby..."
mise use -g ruby
mise settings add idiomatic_version_file_enable_tools ruby

source ~/.zshrc

echo ""
echo "üéâ Installation complete!"
